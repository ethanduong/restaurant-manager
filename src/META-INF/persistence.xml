    <class>dal.entity.ItemClass</class>
    <class>dal.entity.OrderDetails</class>
    <class>dal.entity.MenuItem</class>
    <class>dal.entity.Customer</class>
    <class>dal.entity.Sysdiagrams</class>
    <class>dal.entity.Orders</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:60985;databaseName=RestaurantManagerment"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
      <property name="javax.persistence.jdbc.password" value="1234567"/>
    </properties>
  </persistence-unit>
